{% extends '@lucky/Default/base.html.twig' %}

 {% block main %}

     <h1 class="title_videos">Vid√©os</h1>
     <div class="container">
         <div class="row justify-content-center">
             {% for video in videos %}
                 <div class="col-12 col-md-12 col-lg-5 col-xl-5 video_container ">
                     <iframe width="560" height="315" src="{{ video.url }}" frameborder="0" allowfullscreen
                             class="col-12 video_frame"></iframe>
                     <h3 class="col-12 video_title">{{ video.song }}</h3>
                     {% if is_granted('ROLE_ADMIN') %}
                         <div class="row justify-content-center">
                             <p class="deletebtn_video btn btn-primary"><a
                                         href="{{ path('lucky_deleteVideo', {'id': video.id}) }}">Supprimer</a>
                             </p>
                         </div>
                     {% endif %}
                 </div>
             {% endfor %}
         </div>
     </div>

 {% endblock %}